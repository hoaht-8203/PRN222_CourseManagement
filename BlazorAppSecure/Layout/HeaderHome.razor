@using AntDesign
@inject NavigationManager Navigation

<header class="header">
    <div class="logo">
        <img src="https://media.istockphoto.com/id/607929972/vi/vec-to/logo-e-learning-vector.jpg?s=612x612&w=0&k=20&c=8IDWTGo2MIYYTyoUAXE6BugCPLhUamMlQT64R-39bEw=" alt="ELearning" />
        <span>ELearning</span>
    </div>
    <Menu Mode="MenuMode.Horizontal" Theme="MenuTheme.Light">
        <MenuItem >
            <Icon Type="graduation-cap" />
            Khóa học
            <Icon Type="down" />
        </MenuItem>
        <MenuItem  OnClick="NavigateToBlog">
            <Icon Type="cube" />
            Thế giới lập trình
            <Icon Type="down" />
        </MenuItem>
        <MenuItem OnClick="NavigateToVipSubscription">
            <Icon Type="cube" />
            Gói đăng ký
            <Icon Type="down" />
        </MenuItem>
        <MenuItem >
            <Icon Type="cube" />
            Liên hệ
            <Icon Type="down" />
        </MenuItem>
    </Menu>
    <div class="search">
        <Search Placeholder="Tìm kiếm">
            <Icon Slot="prefix" Type="search" />
        </Search>
    </div>
</header>

<style>
    .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px 20px;
        background-color: #fff;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .logo {
        display: flex;
        align-items: center;
    }

        .logo img {
            height: 40px;
            margin-right: 10px;
        }

        .logo span {
            font-weight: bold;
            font-size: 1.5rem;
            color: #001529;
        }

    .search {
        display: flex;
        align-items: center;
    }
</style>

@code {
    private void NavigateToBlog()
    {
        Navigation.NavigateTo("/listBlog");
    }

    private void NavigateToVipSubscription()
    {
        Navigation.NavigateTo("/vip-subscription");
    }
}