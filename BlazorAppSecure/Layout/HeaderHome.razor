@using AntDesign
@inject NavigationManager Navigation

<header class="header">
    <div class="logo">
        <img src="https://media.istockphoto.com/id/607929972/vi/vec-to/logo-e-learning-vector.jpg?s=612x612&w=0&k=20&c=8IDWTGo2MIYYTyoUAXE6BugCPLhUamMlQT64R-39bEw=" alt="ELearning" />
        <span>ELearning</span>
    </div>

    <div class="menu-container">
        <Menu Mode="MenuMode.Horizontal" Theme="MenuTheme.Light" Class="main-menu">
            <MenuItem OnClick="NavigateToCourse">
                <Icon Type="graduation-cap" Theme="IconThemeType.Outline" />
                Khóa học
            </MenuItem>
            <MenuItem OnClick="NavigateToBlog">
                <Icon Type="read" Theme="IconThemeType.Outline" />
                Thế giới lập trình
            </MenuItem>
            <MenuItem OnClick="NavigateToVipSubscription">
                <Icon Type="crown" Theme="IconThemeType.Outline" />
                Gói đăng ký
            </MenuItem>
            <MenuItem>
                <Icon Type="phone" Theme="IconThemeType.Outline" />
                Liên hệ
            </MenuItem>
        </Menu>
    </div>
</header>

<style>
    .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px 40px;
        background-color: #fff;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        position: sticky;
        top: 0;
        height: 50px;
        z-index: 1000;
    }

    .logo {
        display: flex;
        align-items: center;
    }

        .logo img {
            height: 45px;
            margin-right: 12px;
            transition: transform 0.3s ease;
        }

            .logo img:hover {
                transform: scale(1.05);
            }

        .logo span {
            font-weight: bold;
            font-size: 1.6rem;
            color: #1890ff;
            letter-spacing: 0.5px;
        }

    .main-menu {
        font-size: 1.1rem;
    }

    .menu-container {
        flex-grow: 1;
        display: flex;
        justify-content: center;
    }

    :deep(.ant-menu-horizontal) {
        border-bottom: none;
    }

    :deep(.ant-menu-item) {
        padding: 0 25px;
        margin: 0 5px;
    }

    :deep(.ant-menu-item:hover) {
        color: #1890ff;
    }

    :deep(.anticon) {
        margin-right: 8px;
        font-size: 1.2rem;
    }
</style>

@code {
    private void NavigateToCourse() {
        Navigation.NavigateTo("/");
    }

    private void NavigateToBlog()
    {
        Navigation.NavigateTo("/listBlog");
    }

    private void NavigateToVipSubscription()
    {
        Navigation.NavigateTo("/vip-subscription");
    }
}