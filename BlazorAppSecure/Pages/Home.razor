<h1>Blazored.TextEditor Usage Examples</h1>

<h3>Basic Example</h3>
<div>
    <BlazoredTextEditor @ref="@richEditor">
        <ToolbarContent>
            @((MarkupString)toolbar)
        </ToolbarContent>
        <EditorContent>
            @((MarkupString)body)
        </EditorContent>
    </BlazoredTextEditor>

    <Button OnClick="HandleSubmit">Submit editor text</Button>
</div>

