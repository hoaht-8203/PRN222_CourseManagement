@page "/listBlog"
@using AntDesign
@using BlazorAppSecure.Model
@using BlazorAppSecure.Sevices.Blog

@inject NavigationManager NavigationManager
@inject IBlogService BlogService
@inject IMessageService _message

<BlazorAppSecure.Layout.HeaderHome />
<PageTitle>Danh Sách Blog</PageTitle>


<div class="mb-2">
    <Breadcrumb>
        <BreadcrumbItem Href="">
            <Icon Type="@IconType.Outline.Home" /> Home
        </BreadcrumbItem>
        <BreadcrumbItem>
            List Blog
        </BreadcrumbItem>
    </Breadcrumb>
</div>

<div class="header">
    <h1 class="header-title">Thế giới Lập trình</h1>
    <p class="header-subtitle">Những bí ẩn về lập trình vẫn đang chờ được khám phá</p>
</div>

@if (loading)
{
    <div style="text-align: center;">
        <Spin />
    </div>
}
else
{
    <div class="blog-list">
        @if (blogList.Any())
        {
            @foreach (var blog in FilteredBlogs)
            {
                <div class="blog-card">
                    <div class="author-info">
                        <img src="https://placehold.co/40x40?text=A" alt="Avatar" class="avatar" />
                        <span class="author-text">Admin Team · @blog.CreatedAt.ToString("dd/MM/yyyy HH:mm") · @CalculateReadingTime(blog.Content) phút đọc</span>
                    </div>
                    <h3 @onclick="() => NavigateToDetail(blog.Id)" class="blog-title">
                        @blog.Title <span class="tag">@(blog.Categories?.FirstOrDefault()?.Name ?? "No Tag")</span>
                    </h3>
                    <div class="metrics">
                        <span><Icon Type="eye" /> @blog.ViewCount</span>
                        <span><Icon Type="message" /> 0</span>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-message">Không có bài viết nào để hiển thị.</div>
        }
    </div>
}

@code {
    private List<BlogModel> blogList = new List<BlogModel>();
    private string filter = "latest";
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            loading = true;
            blogList = await BlogService.GetBlogList() ?? new List<BlogModel>();
        }
        catch (Exception ex)
        {
            await _message.Error($"Lỗi khi tải danh sách blog: {ex.Message}");
        }
        finally
        {
            loading = false;
            StateHasChanged();
        }
    }

    private IEnumerable<BlogModel> FilteredBlogs => blogList
        .Where(b => filter == "latest" || (filter == "following" && b.ViewCount > 0))
        .OrderByDescending(b => b.CreatedAt);

    private void SetFilter(string newFilter)
    {
        filter = newFilter;
        StateHasChanged();
    }

    private void NavigateToDetail(int blogId)
    {
        NavigationManager.NavigateTo($"/listblogs/detail/{blogId}");
    }

    private int CalculateReadingTime(string content)
    {
        if (string.IsNullOrEmpty(content)) return 0;
        var wordCount = content.Split(new[] { ' ', '\t', '\n' }, StringSplitOptions.RemoveEmptyEntries).Length;
        return (int)Math.Ceiling(wordCount / 200.0); // Giả định 200 từ/phút
    }
}

